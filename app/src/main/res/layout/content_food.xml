<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/titleContainer"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    app:layout_collapseMode="parallax"
    app:layout_collapseParallaxMultiplier="0.48"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_card"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/im"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/farmaish"/>
    <androidx.cardview.widget.CardView
        android:layout_below="@id/im"
        android:layout_marginTop="-20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardview"
        android:layout_marginBottom="-28dp"
        app:cardCornerRadius="28dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="28dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1b5e20"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="10sp"
                    android:textAllCaps="true"
                    android:text="â€¢  Professionals  "/>
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/vegetarian"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Taste on way"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/taste"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textColor="#000000"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_height="30dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#a4b42b"
                        android:id="@+id/rattext"
                        android:layout_marginRight="5dp"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"
                        android:text="4.6"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@id/rattext"
                        android:layout_alignParentTop="true"
                        android:textColor="#000000"
                        style="@style/foodRatingBar"
                        android:textSize="10sp"
                        android:text="166 Ratings"/>
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@id/rattext"
                        android:layout_alignParentBottom="true"
                        android:rating="4.5"
                        style="@android:style/Widget.DeviceDefault.RatingBar.Small"
                        />


                </RelativeLayout>
            </RelativeLayout>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:text="A dedicated team commited to prepare a quality food with quality contents and fully hyginic home food"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="0dp"
                android:layout_marginBottom="0dp"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
                android:textSize="10sp"
                android:textColor="#000000"
            android:text="Managed By"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prashant Raj"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000"/>
            </LinearLayout>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/user1"/>
        </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    </RelativeLayout>
